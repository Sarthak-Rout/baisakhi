 <div class="row">
     <div class="col-md-2 admin-dashboard">
         <%- include('tables') %>
     </div>
     <div class="col-md-10">
        <h3> EXPENSES </h3><br>
        <table class="table table-striped" id="expensesTable">
            <thead>
                <tr>
                    <th>Sl No</th>
                    <th>HEAD</th>
                    <th>SUBHEAD</th>
                    <th>PAID TO</th>
                    <th>AMOUNT</th>

                </tr>
            </thead>
            <tbody>
                <% for(var i = 0; i < payment.length; i++){  %>     
     
                 <tr>
                     <td><%= i+1 %></td>
                     <td><%= payment[i].head%></td>
                     <td><%= payment[i].subHead %></td>
                     <td><%= payment[i].paidTo %></td>
                     <td><%= payment[i].amount %></td>
                 </tr>
             <% } %>
             </tbody>
        </table>
        
     </div>
 </div>
 
