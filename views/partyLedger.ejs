 <div class="row">
   <div class="col-md-2 admin-dashboard" >
    <%- include('tables') %>

   </div>
   <div class="col-md-10">
    <h3>PARTY LEDGER </h3>
    
    <table class="table table-striped" id="partyTable"> 
        <thead>
            <tr>
                <th>Sl No</th>
                <th>Party Name</th>
                <th>Address</th>
                <th>State</th>
                <th>District</th>
                <th>PIN</th>
                <th>Phone No</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% for(var i = 0; i < party.length; i++){ %>
            <tr>
                <td><%= i+1 %></td>
                <td><%= party[i].nameParty %></td>
                <td><%= party[i].address %></td>
                <td><%= party[i].state %></td>
                <td><%= party[i].district %></td>
                <td><%= party[i].pin %></td>
                <td><%= party[i].phoneNo %></td>
                <td>
                    <a class="btn btn-warning" href="/updateParty/<%=party[i].id %>"><i class="fa fa-pencil " aria-hidden="true" title="update"></i> Update</a> &nbsp;&nbsp;
                    <a class="btn btn-danger" href="/deleteParty/<%=party[i].id %>" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash" aria-hidden="true" title="delete"></i> Delete</a> &nbsp;&nbsp;
                </td>

            </tr>
        <% } %>
        </tbody>
    </table>
    
   </div>
 </div>
 
 

