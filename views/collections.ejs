<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
        crossorigin="anonymous">
 <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
 <link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css"> 
 <link rel="stylesheet" href="https://cdn.datatables.net/buttons/1.6.1/css/buttons.dataTables.min.css">
 <div class="row">
   <div class="col-md-2 admin-dashboard" >
    <%- include('tables') %>

   </div>
   <div class="col-md-10">
    <h3>Stall Collections</h3>
    
    <table class="table table-striped" id="stallTable"> 
        <thead>
            <tr>
                <th>Sl No</th>
                <th>Vendor Name</th>
                <th>Stall Name</th>
                <th>Stall Type</th>
                <th>Total</th>
                <th>Paid</th>
                <th>Due</th>
            </tr>
        </thead>
        <tbody>
           <% for(var i = 0; i < stall.length; i++){  %>
            <% var arrSum = 0; %>
            <% for(var j = 0; j < stall[i].rate.length; j++){ %>
              <% var arrSum = arrSum + stall[i].rate[j]; %>
            <% } %>


            <tr>
                <td><%= i+1 %></td>
                <td><%= stall[i].nameEvent %></td>
                <td><%= stall[i].nameParty %></td>
                <td><%= stall[i].stallType %></td>
                <td><%= stall[i].rate %></td>
                <td><a href="/payment/<%- stall[i]._id %>"><%= arrSum %></a></td>
                <td><%= stall[i].rate - arrSum %></td>

            </tr>
        <% } %>
        </tbody>
    </table>
    
   </div>
 </div>
 
 

<style>
  
    #stallTable{
        margin: 5px;
    }

    thead{
        background-color: #B0C4DE;
    }
</style>

<script src="https://code.jquery.com/jquery-3.3.1.js"></script>
