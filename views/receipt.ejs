 <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
 <div class="row">
     <div class="col-md-2 admin-dashboard" style="margin: auto;">
         <%- include('tables') %>
     </div>
     <div class="col-md-10" style="padding: 30px;">
        <div class = "container">
            <div class="wrapper card">
                <form action="/receipt" method="POST" >
                    <h3 class="form-signin-heading">RECEIPT WINDOW</h3>
                <hr class="colorgraph"><br>

                <div class="row">
                    <div class="col-md-2" style="margin: auto;">
                        <label><b>Event:</b></label>
                    </div>
                    <div class="col">
                        <input list="events" type="text" class="form-control" name="nameEvent" placeholder="" autocomplete="off" required="" autofocus=""/> 
                    <datalist id="events">
                    <% for(var i=0; i<event.length; i++ ){ %>
                        <option value="<%=event[i].nameEvent%>">
                        <% } %>
                    </datalist>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2" style="margin: auto;">
                        <label><b>Head:</b></label>
                    </div>
                    <div class="col">
                        <input list="head" type="text" class="form-control" name="head" placeholder="" required="" autofocus="" />
                    <datalist id="head">
                            <option value="STALL">
                            <option value="SPONSOR">
                            <option value="TICKET">
                            <option value="INVESTMENT">
                            <option value="LOAN">
                    </datalist>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2" style="margin: auto;">
                        <label><b>Name of Party:</b></label>
                    </div>
                    <div class="col">
                        <input list="stall" type="text" class="form-control" amount : { type: Number }, id="party" name="nameParty" placeholder="" required="" autocomplete="off" autofocus="" onchange="calcAmount(this.value)"/>
                    <datalist id="stall">
                         <% for(var i=0; i<stall.length; i++ ){ %>
                            <option value="<%=stall[i].nameParty%>">
                        <% } %>
                    </datalist>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2" style="margin: auto;">
                        <label><b>Receipt Amount:</b></label>
                    </div>
                    <div class="col">
                        <input type="number" id="amount" class="form-control" name="amount" placeholder="" required="" autofocus="" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2" style="margin: auto;">
                        <label><b>Through:</b></label>
                    </div>
                    <div class="col">
                        <input list="through" type="text" class="form-control" name="through" placeholder="" required="" autofocus="" />
                    <datalist id="through">
                            <option value="CASH">
                            <option value="CHEQUE">
                            <option value="NEFT">
                            <option value="UPI">
                    </datalist>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2" style="margin: auto;">
                        <label><b> Date:</b></label>
                    </div>
                    <div class="col">
                        <input type="date" class="form-control" id="date-input" name="paymentDate" placeholder="" required="" autofocus="" />
                    </div>
                </div> <br>

                <div class="row justify-content-center">
                    <div class="col-md-2" style="margin: auto;"></div>
                    <div class="col-md-5">
                        <button class="btn btn-lg btn-primary btn-block" type="Submit">Print Receipt</button>
                    </div>
                </div>
                    
                
                
                
                </form>
            </div>
        </div>
     </div>
 </div>

